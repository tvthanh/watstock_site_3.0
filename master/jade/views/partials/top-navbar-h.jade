// START Top Navbar
nav.navbar.topnavbar.shadow-z1(role='navigation')
    // START navbar header
    .navbar-header
      button.navbar-toggle.collapsed(type='button', ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        .brand-logo
          img.logo-white.img-responsive(src="app/img/logo_white.png", alt="App Logo")
          img.logo-dark.img-responsive(src="app/img/logo_dark.png", alt="App Logo")
        .brand-logo-collapsed
          //img.img-responsive(src="app/img/logo-single.png", alt="App Logo")

    // END navbar header

    // START Nav wrapper
    .collapse.navbar-collapse(uib-collapse="navCollapsed")
      // Navbar Menu 
      ul.nav.navbar-nav(ng-controller="SidebarController")
        li
          a(ng-href="/", title="home")
            span Home
        li
          a(href="", title="features")
            span Features
        li
          a(href="", title="pricing")
            span Pricing
        li
          a(href="", title="investors")
            span Investors
        li
          a(href="", title="faq")
            span FAQ
      // End Navbar Menu

      // START Right Navbar
      ul.nav.navbar-nav.navbar-right
        // Search icon
        li
          a(href='', search-open)
            em.icon-magnifier
        // Fullscreen (only desktops)
        li.visible-lg
          a(href='', toggle-fullscreen)
            em.fa.fa-expand
        // START Alert menu
        li.dropdown.dropdown-list(uib-dropdown="")
          a(uib-dropdown-toggle="")
            em.icon-bell
            .label.label-danger 1
          // START Dropdown menu
          ul.dropdown-menu(class="animated flipInX")
            li
              // START list group
              .list-group
                // list item
                a.list-group-item(href='')
                  .media-box
                    .pull-left
                      em.fa.fa-twitter.fa-2x.text-info
                    .media-box-body.clearfix
                      p.m0 New followers
                      p.m0.text-muted: small 1 new follower
                // list item
                a.list-group-item(href='')
                  .media-box
                    .pull-left
                      em.fa.fa-envelope.fa-2x.text-warning
                    .media-box-body.clearfix
                      p.m0 New e-mails
                      p.m0.text-muted: small You have 10 new emails
                // list item
                a.list-group-item(href='')
                  .media-box
                    .pull-left
                      em.fa.fa-tasks.fa-2x.text-success
                    .media-box-body.clearfix
                      p.m0 Pending Tasks
                      p.m0.text-muted: small 11 pending task

                // last list item
                a.list-group-item(href='')
                  small(translate="topbar.notification.MORE") More notifications
                  span.label.label-danger.pull-right 14
              // END list group
          // END Dropdown menu
        // END Alert menu
        // START Contacts button
        //li
        //  a(href='', ng-click="app.offsidebarOpen = !app.offsidebarOpen")
        //    em.icon-notebook
        // END Contacts menu
        // START lock screen
        li
          a(ui-sref="auth.login", title="Login screen")
            em.icon-user
        // END lock screen
      // END Right Navbar
    // END Nav wrapper

    // START Search form
    form.navbar-form(role='search', action="search.html")
      .form-group.has-feedback
        input.form-control(type='text', placeholder="{{ 'topbar.search.PLACEHOLDER' | translate }}")
        .fa.fa-times.form-control-feedback(search-dismiss)
      button.hidden.btn.btn-default(type='submit') Submit
    // END Search form

// END Top Navbar